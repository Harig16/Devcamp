<%= form_for(portfolio_items) do |form| %>
  <% if portfolio_items.errors.any? %>
    <div>
      <h2><%= pluralize(portfolio_items.errors.count, "error") %> prohibited this Portfolio from being saved: </h2>
      <% portfolio_items.errors.full_messages.each do |message| %>
        <%= js add_gritter(message, title: "Devcamp portfolio", sticky: false) %>
      <% end %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :sub_title %>
        <%= form.text_area :sub_title, class: "form-control" %>
      </div>

      <div class="form-group portfolio-img-btn">
        <label class="btn btn-primary">
          Upload Main Image <%= form.file_field :main_image, style: "display:none;" %>
        </label>
      </div>
      <div class="form-group portfolio-img-btn">
      <label class="btn btn-primary">
          Upload Thumb Image <%= form.file_field :thumb_image, style: "display:none;" %>
        </label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 10 %>
      </div>
    </div>
  </div>
    <hr>

  <div class="col-md-12">
  <h3>Technologies Used: </h3>
    <div class="form-group">
      <ul>
        <%= form.fields_for :technologies do |technology_form| %>
          <%= render "technology_fields", f: technology_form %>
        <% end %>
      </ul>
      <div>
        <%= link_to_add_association "Add Technology", form, :technologies %>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit "Save Portfolio Item", class: "btn btn-primary btn-block" %>
    </div>
  </div>
</div>
<% end %>
