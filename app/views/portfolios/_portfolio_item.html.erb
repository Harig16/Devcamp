    <div class="card-body">
      <p class="card-text"><strong><%= portfolio_item.title %></strong> <%= portfolio_item.sub_title %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <%= link_to "View", portfolio_show_path(portfolio_item) %>
          </button>
          <% if logged_in? (:site_admin) %>
            <button type="button" class="btn btn-sm btn-outline-secondary">
              <%= link_to "Edit", edit_portfolio_path(portfolio_item) %>
            </button>
          <% end %>
        </div>
        <small class="text-muted"><%= time_ago_in_words(portfolio_item.updated_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
