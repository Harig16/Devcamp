<div data-id="<%= portfolio_item.id %>" class="col">
  <div class="card shadow-sm">
    <!--svg class="bd-placeholder-img card-img-top" width="100%" height="225"    xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder:    Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"-->
      <%=  image_tag  portfolio_item.thumb_image unless portfolio_item.    thumb_image.nil? %>
      <!--title>
        <%= portfolio_item.title %>
      </title>
      <rect width="100%" height="100%" fill="#55595c"/>
      <text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= portfolio_item.title %></    text>
    </svg-->

    <div class="card-body">
      <p class="card-text"><strong><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></strong> <%= portfolio_item.sub_title %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <% if logged_in? (:site_admin) %>
            <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Delete", portfolio_path(portfolio_item), method: :delete, data: {confirm:  "Are you sure? " }, class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
        </div>
        <small class="text-muted"><%= time_ago_in_words(portfolio_item.updated_at) %> ago</small>
      </div>
    </div>
  </div>
</div>