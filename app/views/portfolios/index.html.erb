<h1>Portfolio</h1>

<%= link_to "Create new portfolio", new_portfolio_path %>

  <% @portfolios.each do |portfolio| %>
    <h3><%= link_to portfolio.title, portfolio_path(portfolio) %></h3>
    <h5><%= portfolio.sub_title%></h5>
    <p><%= portfolio.body %></p>
    <p><%=  image_tag  portfolio.thumb_image unless portfolio.thumb_image.nil?%></p>
    <%= link_to "Edit", edit_portfolio_path(portfolio) %>
  <% end %>
